<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity2">

    <Button
        android:id="@+id/btn_add_floors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Floor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/btn_all_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="All Floor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_floors" />

    <Button
        android:id="@+id/btn_add_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Add category"
        app:layout_constraintEnd_toEndOf="@+id/btn_all_floor"
        app:layout_constraintStart_toStartOf="@+id/btn_all_floor"
        app:layout_constraintTop_toBottomOf="@+id/btn_all_floor" />

    <Button
        android:id="@+id/add_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Add Menu Item"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_category"
        app:layout_constraintStart_toStartOf="@+id/btn_add_category"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_category" />
</androidx.constraintlayout.widget.ConstraintLayout>