<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>
    <item android:gravity="top|right" android:right="20dp" android:top="100dp">
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#0FFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    <item android:gravity="center|left" android:left="30dp">
        <shape android:shape="oval">
            <size android:width="120dp" android:height="120dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#0AFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    <item android:gravity="bottom|center" android:bottom="70dp">
        <shape android:shape="oval">
            <size android:width="100dp" android:height="100dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="50dp"
                android:startColor="#08FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>