<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for light mode -->
    <style name="Base.Theme.Restaurant_Manager_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Accent colors -->
        <item name="colorAccent">@color/accent</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/text_hint_light</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/gray_50</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Card and dialog styling -->
        <item name="cardBackgroundColor">@color/card_light</item>
        <item name="dividerColor">@color/divider_color</item>
    </style>

    <style name="Theme.Restaurant_Manager_App" parent="Base.Theme.Restaurant_Manager_App" />

    <!-- Dialog animations -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Restaurant-specific styles -->
    <style name="TextAppearance.OrderNumber" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.RestaurantManager.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.RestaurantManager.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.RestaurantManager.Chip.Status" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/gray_200</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="Widget.RestaurantManager.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_light</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

</resources>